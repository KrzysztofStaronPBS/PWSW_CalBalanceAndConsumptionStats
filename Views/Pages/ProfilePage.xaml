<Page
    x:Class="PWSW_CalBalanceAndConsumptionStats.Views.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Padding="40">
		<StackPanel Spacing="20" MaxWidth="600" HorizontalAlignment="Left">

			<StackPanel Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
				<Button Command="{x:Bind ViewModel.GoBackCommand}" 
                        Content="&#xE72B;" 
                        FontFamily="Segoe MDL2 Assets" 
                        FontSize="16"
                        Width="40" Height="40"
                        ToolTipService.ToolTip="Powrót do menu"/>
				<TextBlock Text="Mój Profil" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
			</StackPanel>

			<Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    Padding="20" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
				<StackPanel Spacing="10">
					<TextBlock Text="Dane Użytkownika" FontSize="18" FontWeight="SemiBold"/>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<StackPanel Grid.Column="0" Spacing="5">
							<TextBlock Text="Nazwa:" Foreground="Gray"/>
							<TextBlock Text="Wiek:" Foreground="Gray"/>
							<TextBlock Text="Płeć:" Foreground="Gray"/>
						</StackPanel>
						<StackPanel Grid.Column="1" Spacing="5" Margin="20,0,0,0">
							<TextBlock Text="{x:Bind ViewModel.CurrentUser.Name}" FontWeight="Medium"/>
							<StackPanel Orientation="Horizontal" Spacing="5">
								<TextBlock Text="{x:Bind ViewModel.CurrentUser.Age}" FontWeight="Medium"/>
								<TextBlock Text="lat" Foreground="Gray"/>
							</StackPanel>
							<TextBlock Text="{x:Bind ViewModel.DisplayGender}" FontWeight="Medium"/>
						</StackPanel>
					</Grid>
				</StackPanel>
			</Border>

			<Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    Padding="20" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
				<StackPanel Spacing="10">
					<TextBlock Text="Parametry Fizyczne" FontSize="18" FontWeight="SemiBold"/>
					<StackPanel Orientation="Horizontal" Spacing="40">
						<StackPanel>
							<TextBlock Text="Wzrost" Foreground="Gray" FontSize="12"/>
							<StackPanel Orientation="Horizontal" Spacing="2">
								<TextBlock Text="{x:Bind ViewModel.CurrentUser.Height}" FontSize="20" FontWeight="Bold"/>
								<TextBlock Text="m" VerticalAlignment="Bottom" Margin="0,0,0,4" FontSize="12" Foreground="Gray"/>
							</StackPanel>
						</StackPanel>
						<StackPanel>
							<TextBlock Text="Waga" Foreground="Gray" FontSize="12"/>
							<StackPanel Orientation="Horizontal" Spacing="2">
								<TextBlock Text="{x:Bind ViewModel.CurrentUser.Weight}" FontSize="20" FontWeight="Bold"/>
								<TextBlock Text="kg" VerticalAlignment="Bottom" Margin="0,0,0,4" FontSize="12" Foreground="Gray"/>
							</StackPanel>
						</StackPanel>
						<StackPanel>
							<TextBlock Text="BMI" Foreground="Gray" FontSize="12"/>
							<StackPanel Orientation="Horizontal" Spacing="10">
								<TextBlock Text="{x:Bind ViewModel.CurrentUser.BMI}" FontSize="20" FontWeight="Bold"/>
								<TextBlock Text="{x:Bind ViewModel.BmiStatus}" VerticalAlignment="Center" Foreground="#FF26A69A" FontWeight="SemiBold"/>
							</StackPanel>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</Border>

			<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
				<Button Content="Wyloguj" Command="{x:Bind ViewModel.LogoutCommand}" Width="120"/>
				<Button Content="Usuń Konto" Command="{x:Bind ViewModel.DeleteAccountCommand}" 
                        Background="#FFF44336" Foreground="White" Width="120"/>
			</StackPanel>

		</StackPanel>
	</Grid>
</Page>