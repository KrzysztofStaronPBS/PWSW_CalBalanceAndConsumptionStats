<Page
    x:Class="PWSW_CalBalanceAndConsumptionStats.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="#FFF5F6F8">
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="360">

			<StackPanel>
				<TextBlock Text="Logowanie"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"/>

				<StackPanel Margin="0,10,0,0">
					<TextBlock Text="Login" FontSize="15" FontWeight="SemiBold"/>
					<TextBox Text="{x:Bind ViewModel.LoginInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             PlaceholderText="Wpisz login" />
				</StackPanel>

				<StackPanel Margin="0,10,0,0">
					<TextBlock Text="Hasło" FontSize="15" FontWeight="SemiBold"/>
					<PasswordBox x:Name="PasswordBox" 
                                 PasswordChanged="PasswordBox_PasswordChanged" />
				</StackPanel>

				<Button Content="Zaloguj"
                        Click="Login_Click"
                        Height="45"
                        HorizontalAlignment="Stretch"
                        Margin="0,20,0,0"
                        Background="#FF5C6BC0"
                        Foreground="White"/>

				<TextBlock Text="lub" HorizontalAlignment="Center" Margin="0,15" Foreground="Gray"/>

				<Button Content="Zarejestruj się"
                        Command="{x:Bind ViewModel.GoToRegisterCommand}"
                        Height="45"
                        HorizontalAlignment="Stretch"
                        Background="#FF26A69A"
                        Foreground="White"/>
			</StackPanel>
		</Grid>
	</Grid>
</Page>