<Page
    x:Class="PWSW_CalBalanceAndConsumptionStats.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="#FFF5F6F8" Padding="40">
		<StackPanel VerticalAlignment="Top" HorizontalAlignment="Right">
			<TextBlock Text="{x:Bind ViewModel.WelcomeMessage}" Foreground="Gray" FontWeight="Medium"/>
		</StackPanel>

		<StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Menu Główne" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<Button Content="Dziennik i Historia" Command="{x:Bind ViewModel.ShowEntriesCommand}" 
                    Height="40" Width="300" Background="#FF5C6BC0" Foreground="White" CornerRadius="4"/>

			<Rectangle Height="1" Fill="LightGray" Width="200" Margin="0,10"/>

			<Button Content="Katalog Posiłków i Aktywności" Command="{x:Bind ViewModel.NavigateToCatalogCommand}" 
                    Height="40" Width="300" Background="#FF4DB6AC" Foreground="White" CornerRadius="4"/>

			<Button Content="Podsumowanie dnia" Command="{x:Bind ViewModel.ShowDailySummaryCommand}" 
                    Height="40" Width="300" Background="#FF7986CB" Foreground="White" CornerRadius="4"/>

			<Button Content="Raporty okresowe" Command="{x:Bind ViewModel.GenerateReportCommand}" 
                    Height="40" Width="300" Background="#FF9FA8DA" Foreground="White" CornerRadius="4"/>

			<Rectangle Height="1" Fill="LightGray" Width="200" Margin="0,10"/>

			<Button Content="Profil użytkownika" Command="{x:Bind ViewModel.EditProfileCommand}" 
                    Height="35" Width="300" Background="#FFA1887F" Foreground="White" CornerRadius="4"/>

			<Button Content="Wyloguj" Command="{x:Bind ViewModel.LogoutCommand}" 
                    Margin="0,10,0,0" Height="35" Width="120" Background="Transparent" 
                    Foreground="#FFD32F2F" BorderBrush="#FFD32F2F" BorderThickness="1" CornerRadius="4"/>
		</StackPanel>
	</Grid>
</Page>