<Page
    x:Class="PWSW_CalBalanceAndConsumptionStats.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="#FFF5F6F8" Padding="40">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1.2*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Text="{x:Bind ViewModel.WelcomeMessage}" Grid.Column="1" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Foreground="Gray" FontWeight="Medium"/>

		<StackPanel Grid.Column="0" Spacing="12" VerticalAlignment="Center" Margin="0,0,40,0">
			<TextBlock Text="Menu Główne" FontSize="32" FontWeight="Bold" Margin="0,0,0,20"/>

			<Button Content="Dziennik i Historia" Command="{x:Bind ViewModel.ShowEntriesCommand}" 
                    Height="45" HorizontalAlignment="Stretch" Background="#FF5C6BC0" Foreground="White" CornerRadius="4"/>

			<Button Content="Katalog Posiłków i Aktywności" Command="{x:Bind ViewModel.NavigateToCatalogCommand}" 
                    Height="45" HorizontalAlignment="Stretch" Background="#FF4DB6AC" Foreground="White" CornerRadius="4"/>

			<Button Content="Raporty okresowe" Command="{x:Bind ViewModel.GenerateReportCommand}" 
                    Height="45" HorizontalAlignment="Stretch" Background="#FF9FA8DA" Foreground="White" CornerRadius="4"/>

			<Rectangle Height="1" Fill="LightGray" Margin="0,15"/>

			<Button Content="Profil użytkownika" Command="{x:Bind ViewModel.EditProfileCommand}" 
                    Height="40" HorizontalAlignment="Stretch" Background="#FFA1887F" Foreground="White" CornerRadius="4"/>

			<Button Content="Wyloguj" Command="{x:Bind ViewModel.LogoutCommand}" 
                    Margin="0,20,0,0" Height="35" Width="120" HorizontalAlignment="Left"
                    Background="Transparent" Foreground="#FFD32F2F" BorderBrush="#FFD32F2F" BorderThickness="1" CornerRadius="4"/>
		</StackPanel>

		<Border Grid.Column="1" 
                Background="White" 
                CornerRadius="12" 
                Padding="30" 
                VerticalAlignment="Center" 
                MaxWidth="600" 
                HorizontalAlignment="Stretch">
			<StackPanel Spacing="30">
				<TextBlock Text="Twoje podsumowanie dnia" FontSize="26" FontWeight="Bold"/>

				<Grid ColumnSpacing="15">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1.5*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<Border Grid.Column="0" Background="#FF4DB6AC" Padding="20" CornerRadius="12">
						<StackPanel>
							<TextBlock Text="Dostępny limit" Foreground="White" FontSize="14" Opacity="0.9"/>
							<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
								<TextBlock Text="{x:Bind ViewModel.Remaining, Mode=OneWay}" FontSize="36" FontWeight="ExtraBold" Foreground="White"/>
								<TextBlock Text=" kcal" FontSize="16" Foreground="White" VerticalAlignment="Bottom" Margin="5,0,0,6"/>
							</StackPanel>
						</StackPanel>
					</Border>

					<Border Grid.Column="1" Background="#F5F5F5" Padding="15" CornerRadius="12">
						<StackPanel VerticalAlignment="Center">
							<TextBlock Text="Spożyte" Foreground="#666666" FontSize="12" FontWeight="Medium"/>
							<TextBlock Text="{x:Bind ViewModel.TotalEaten, Mode=OneWay}" FontSize="20" FontWeight="Bold" Foreground="#FF5C6BC0"/>
						</StackPanel>
					</Border>

					<Border Grid.Column="2" Background="#F5F5F5" Padding="15" CornerRadius="12">
						<StackPanel VerticalAlignment="Center">
							<TextBlock Text="Spalone" Foreground="#666666" FontSize="12" FontWeight="Medium"/>
							<TextBlock Text="{x:Bind ViewModel.TotalBurned, Mode=OneWay}" FontSize="20" FontWeight="Bold" Foreground="#E81123"/>
						</StackPanel>
					</Border>
				</Grid>

				<StackPanel Spacing="10">
					<Grid>
						<TextBlock Text="Realizacja planu" FontWeight="SemiBold"/>
						<TextBlock Text="{x:Bind ViewModel.ProgressText, Mode=OneWay}" HorizontalAlignment="Right" Foreground="Gray"/>
					</Grid>
					<ProgressBar Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}" Height="15" CornerRadius="7.5" Background="#E0E0E0"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Page>